<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">新規GPTs作成</h1>

    <%= form_with(model: @gpt, local: true, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "w-full border rounded-md shadow-sm p-2", placeholder: "GPTsの名前を入力してください" %>
      </div>

      <div>
        <%= f.label :prompt, "プロンプト", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :prompt, class: "w-full border rounded-md shadow-sm p-2", rows: 10, placeholder: "GPTsのプロンプトを入力してください" %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "キャンセル", gpts_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
        <%= f.submit "作成", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
</div>
