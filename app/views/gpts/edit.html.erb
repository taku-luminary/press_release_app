<div class="gpt-edit-container" style="max-width:700px;margin:2rem auto;padding:1rem;background:#ffffff;border:1px solid #e0e0e0;border-radius:8px;">
  <h1 style="text-align:center;margin-bottom:1.5rem;">GPT 編集</h1>

  <%= form_with model: @gpt, local: true do |f| %>
    <div class="form-group" style="margin-bottom:1rem;">
      <%= f.label :name, '名前', style: 'display:block;font-weight:bold;margin-bottom:0.5rem;color:#333333;' %>
      <%= f.text_field :name, class: 'form-control', style: 'width:100%;padding:0.5rem;border:1px solid #d0d0d0;border-radius:4px;' %>
    </div>

    <div class="form-group" style="margin-bottom:1rem;">
      <%= f.label :description, '説明', style: 'display:block;font-weight:bold;margin-bottom:0.5rem;color:#333333;' %>
      <%= f.text_area :description, rows:4, class: 'form-control', style: 'width:100%;padding:0.5rem;border:1px solid #d0d0d0;border-radius:4px;' %>
    </div>

    <div class="form-group" style="margin-bottom:1rem;">
      <%= f.label :instructions, '指示（プロンプト）', style: 'display:block;font-weight:bold;margin-bottom:0.5rem;color:#333333;' %>
      <%= f.text_area :instructions, rows:8, class: 'form-control', style: 'width:100%;padding:0.5rem;border:1px solid #d0d0d0;border-radius:4px;' %>
    </div>

    <div style="display:flex;justify-content:space-between;">
      <%= link_to 'キャンセル', press_threads_path, class: 'btn btn-secondary', style: 'padding:0.5rem 1rem;border:1px solid #d0d0d0;border-radius:4px;text-decoration:none;color:#333333;background:#f5f5f5;' %>
      <%= f.submit '更新', class: 'btn btn-primary', style: 'padding:0.5rem 1rem;background:#333333;color:#ffffff;border:none;border-radius:4px;' %>
    </div>
  <% end %>
</div> 